<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_login"
    android:orientation="vertical"
    android:visibility="visible">


    <TextView
        android:id="@+id/tv_titulo_login"
        android:layout_width="275dp"
        android:layout_height="69dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="sans-serif-black"
        android:text="AgroEcologico"
        android:textAlignment="center"
        android:textColor="#11C518"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="286dp"
        android:layout_height="39dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#141514"
        android:textColorLink="#11C518"
        android:textIsSelectable="true" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="284dp"
        android:layout_height="56dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:textColor="#141514"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textColorLink="#11C518" />


    <Button
        android:id="@+id/bt_ingresar"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/bt_ingresar_border"
        android:onClick="login"
        android:text="Ingresar"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible" />

</LinearLayout>