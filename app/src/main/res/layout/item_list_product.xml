<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ItemListaProd"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_heigth"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"

    android:visibility="visible">

    <TextView
        android:id="@+id/tv_name_product"
        android:layout_width="135dp"
        android:layout_height="22dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="" />

    <ImageView
        android:id="@+id/imageView_product"
        android:layout_width="@dimen/card_img_size"
        android:layout_height="@dimen/card_img_size"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/profile_default"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/tv_precio_product"
        android:layout_width="100dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toEndOf="@+id/tv_Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_unidad_product"
        android:layout_width="77dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintEnd_toStartOf="@+id/tv_precio_product"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toEndOf="@+id/tv_name_product"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>