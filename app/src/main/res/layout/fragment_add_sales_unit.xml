<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_login"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".ui.admin.CreateUnitFragment"
    >

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_name_unit"
        android:layout_width="286dp"
        android:layout_height="39dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:hint="Nombre de la unidad"
        android:textColor="@color/black"
        android:textColorLink="#11C518"
        android:textIsSelectable="true" />

    <EditText
        android:id="@+id/et_desc_unit"
        android:layout_width="286dp"
        android:layout_height="39dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:hint="Descripcion"
        android:textColor="@color/black"
        android:textColorLink="#11C518"
        android:textIsSelectable="true" />

    <Button
        android:id="@+id/bt_registrar_unit"
        android:layout_width="181dp"
        android:layout_height="59dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/bt_ingresar_border"
        android:text="Agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />
</LinearLayout>